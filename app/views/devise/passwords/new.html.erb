<h2>パスワードをお忘れですか？</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "登録時のEmailを入力" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードを再登録する" %>
  </div>
  <div class="space">
<% end %>

