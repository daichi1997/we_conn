<% breadcrumb :DateLocation %>
<h2>日時と場所</h2>
<div class="date_form">
<%= form_for @event, url: wizard_path(step, event_id: (@event.new_record? ? 'new' : @event.id)), method: :patch do |f| %>
    <ul>
    <li class="all_form" ><%= f.label :start_time,"予定日時" %><br>
    <li class="all_form" ><%= f.datetime_local_field :start_time,
                                   value: @event.start_time.strftime('%Y-%m-%dT%H:%M') || Time.current.strftime('%Y-%m-%dT%H:%M'),
                                   class: "datetime-field" %><br>
    <li class="all_form" ><%= f.label :location,"場所" %><br>
    <li class="all_form" ><%= f.text_field :location,placeholder:"場所を指定してください" %><br>
    <li class="all_form" ><%= f.submit '次へ' ,class: "next_button" %>
    </ul>
</div>
<% end %>
