<% breadcrumb :NewEvent %>
<h2>新規イベント投稿</h2>

<% if session[:event_errors].present? %>
  <div id="error_explanation">
    <h2><%= pluralize(session[:event_errors].count, "error") %> prohibited this event from being saved:</h2>
    <ul>
      <% session[:event_errors].each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% session.delete(:event_errors) %>
<% end %>
<%= form_for @event, url: wizard_path do |f| %>

<div class="basic_info">
 <ul>
  <li class="basic_form" ><%= f.label :tag_id ,"タグ"%><br></li>
  <li class="basic_form" ><%= f.collection_select :tag_id, Tag.all, :id, :name, prompt: "タグを選択してください" %>
  <li class="basic_form" ><%= f.label :title ,"イベントタイトル"%><br></li>
  <li class="basic_form"><%= f.text_field :title ,class:"title_form",placeholder: "イベント名を入力してください"%><br></li>
  <li class="basic_form"><%= f.label :description,"概要欄" %><br></li>
  <li class="basic_form"><%= f.text_area :description,class:"description",placeholder: "イベントリンクと内容を入力してください" %><br></li>

  <li class="basic_form"><%= f.submit '次へ', class: "next_button" %></li>
  </ul>
</div>
<% end %>