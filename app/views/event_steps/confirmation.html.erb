<h2>イベント詳細の確認</h2>

<% if @event.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
    <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="event-confirmation">
<%= form_for @event, url: wizard_path, method: :put do |f| %>
  <%= f.hidden_field :title %>
  <%= f.hidden_field :description %>
  <%= f.hidden_field :start_time %>
  <%= f.hidden_field :location %>
  <%= f.submit 'イベントを作成', class: 'btn btn-success' %>
<% end %>

  <%# <p><strong>タグ:</strong> <%= @event.tag.name if @event.tag %></p> 

  <% if @event.image.attached? %>
    <div class="event-image">
      <%= image_tag @event.image, class: "img-fluid" %>
    </div>
  <% else %>
    <p>画像はアップロードされていません。</p>
  <% end %>

  <%= form_for @event, url: wizard_path, method: :put do |f| %>
    <%= f.submit 'イベントを作成', class: 'btn btn-success' %>
  <% end %>
  <%= link_to '編集', previous_wizard_path, class: 'btn btn-secondary' %>
</div>